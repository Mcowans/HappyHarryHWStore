<p id="notice"><%= notice %></p>

<h1>Custumers</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @custumers.each do |custumer| %>
      <tr>
        <td><%= custumer.customer_id %></td>
        <td><%= custumer.first_name %></td>
        <td><%= custumer.last_name %></td>
        <td><%= custumer.email %></td>
        <td><%= custumer.phone %></td>
        <td><%= custumer.address_id %></td>
        <td><%= link_to 'Show', custumer %></td>
        <td><%= link_to 'Edit', edit_custumer_path(custumer) %></td>
        <td><%= link_to 'Destroy', custumer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

